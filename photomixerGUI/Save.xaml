<Window x:Class="photomixerGUI.Save"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:photomixerGUI"
        mc:Ignorable="d"
        Title="Save" Height="450" Width="800">
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Name="ErrorMsg" Margin="4,50,4,50" Foreground="DarkRed" Grid.ColumnSpan="2"/>

        <Label Content="Enter save path (with image name, type png):" Foreground="White" Margin="4,53,10,47" Grid.Row="1"/>
        <TextBox x:Name="imagePath" Grid.Column="1" Margin="25,50,25,50" Grid.Row="1"/>

        <Button Grid.Column="1" Grid.Row="2" FontSize="15" Content="Edit image" 
                Foreground="Black" FontWeight="Bold" Click="edit" Margin="83,48,350,47"/>

    </Grid>
</Window>
