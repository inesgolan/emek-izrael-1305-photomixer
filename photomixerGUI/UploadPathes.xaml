<Window x:Class="photomixerGUI.UploadPathes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:photomixerGUI"
        mc:Ignorable="d"
        Title="UploadPathes" Height="450" Width="800">

    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Content="Enter the count of object pathes: (1-4) " Foreground="White" Margin="86,7,86,100" Grid.Column="1" />
        <TextBox x:Name="countOfPathes" Grid.Column="1" Margin="125,45,125,57"/>

        <Label Content="Enter path of object image:" Foreground="White" Margin="4,53,10,47" Grid.Row="1"/>
        <TextBox x:Name="objectPath" Grid.Column="1" Margin="25,50,25,50" Grid.Row="1"/>

        <Label Grid.Row="2" Content="Enter path of background image:" Foreground="White" Margin="4,50,10,50"/>
        <TextBox x:Name="backgroundPath" Grid.Column="1" Grid.Row="2" Margin="25,50,25,50"/>

        <TextBlock Name="ErrorMsg" Margin="4,50,10,50" Foreground="DarkRed"/>

        <Button Grid.Column="1" FontSize="15" Height="40" Width="60" Content="Submit" Name="countTextBox"
                Foreground="Black" FontWeight="Bold" Click="checkCount" Margin="150,89,150,6"/>

        <Button Grid.Column="2" Grid.Row="1" FontSize="15" Height="50" Width="100" Content="Detect object" 
                Foreground="Black" FontWeight="Bold" Click="objectDetection"/>

        <Button Grid.Column="2" Grid.Row="2" FontSize="15" Height="50" Width="100" Content="Edit image" 
                Foreground="Black" FontWeight="Bold" Click="edit"/>

    </Grid>
</Window>
