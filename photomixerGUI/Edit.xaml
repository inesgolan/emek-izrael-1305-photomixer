<Window x:Class="photomixerGUI.Edit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:photomixerGUI"
        mc:Ignorable="d"
        Title="Edit" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0.3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Image Name="BackgroundImage" AllowDrop="True" Source="{Binding BackgroundImage}"/>
        
        <ListView Name="Images" Grid.Column="1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Image MouseLeftButtonDown="dragObject" Source="{Binding}"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ListBox Name="Numbers" Grid.Column="2">
            <ListBox.ItemTemplate>
                <DataTemplate >
                    <TextBlock Text="{Binding}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button Grid.Row="1" FontSize="15" Height="50" Width="100" Content="Save image" 
                Foreground="Black" FontWeight="Bold" Click="save"/>

        <Button Grid.Column="1" Grid.Row="1" FontSize="15" Height="50" Width="100" Content="resize" 
                Foreground="Black" FontWeight="Bold" Click="resize"/>

    </Grid>
</Window>
